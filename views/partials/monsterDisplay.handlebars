<table>
    <tr>
        <th>Name</th>
        <td colspan=5>{{name}}</td>
    </tr>
    <tr>
        <th>Type</th>
        <td colspan=3>{{type}}</td>
        <th>CR</th>
        <td class="center">{{challenge}}</td>
    </tr>
    <tr>
        <th>Desc.</th>
        <td colspan=5>{{description}}</td>
    </tr>
    <tr>
        <th>STR</th>
        <th>DEX</th>
        <th>CON</th>
        <th>INT</th>
        <th>WIS</th>
        <th>CHA</th>
    </tr>
    <tr>
        <td class="center">{{strength}}</td>
        <td class="center">{{dexterity}}</td>
        <td class="center">{{constitution}}</td>
        <td class="center">{{intelligence}}</td>
        <td class="center">{{wisdom}}</td>
        <td class="center">{{charisma}}</td>
    </tr>
    <tr>
        <th colspan=2>Source</th>
        <td colspan=4>{{source}}</td>
    </tr>
    {{#if abilities}}
    <tr>
        <th colspan=6>Abilities</th>
    </tr>
    {{#each abilities}}
    <tr>
        <th>Ability</th>
        <td colspan=5>{{this.name}}</td>
    </tr>
    {{/each}}{{/if}}
    {{#if biomes}}
    <tr>
        <th colspan=6>Found In</th>
    </tr>
    {{#each biomes}}
    <tr>
        <th>Biome</th>
        <td colspan=5>{{this.name}}</td>
    </tr>
    {{/each}}{{/if}}
    <tr>
        <td class="center" colspan=2><button onclick="loadMonster(0, 'add')">Add New</button></td>
        <td class="center" colspan=2><button onclick="loadMonster({{characterID}}, 'modify')">Modify</button></td>
        <td class="center" colspan=2><button onclick="deleteMonster({{characterID}})">Delete</button></td>
    </tr>
</table>