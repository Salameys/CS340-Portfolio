<script src="/js/list.js"></script>
<script src="/js/display.js"></script>
<script src="/js/character.js"></script>
<link rel='stylesheet' type='text/css' href='/css/table.css' />

<div class="viewport">
    <div class="listcontainer">
        <table>
            <tr>
                <form id="search-form" onsubmit="tagSearch('name', 'search-field', 'characterID'); return false;" method="post">
                    <td colspan='4'><input id="search-field" type="text"/></td>
                    <td><input type="submit" value="Search"></td>
                </form>
            </tr>
            <tr>
                <td class="wrappable" colspan='5' id="filter-row">
                    <div >
                        <button onclick="filterList('characters', 'race', 'Dinosaur', characterKeys)">Dinosaur</button> 
                        <button onclick="filterList('characters', 'race', 'Donkey', characterKeys)">Donkey</button> 
                        <button onclick="filterList('characters', 'race', 'Human', characterKeys)">Human</button> 
                        <button onclick="filterList('characters', 'race', 'Ogre', characterKeys)">Ogre</button> 
                        <button onclick="filterList('characters', 'class', 'Bard', characterKeys)">Bard</button> 
                        <button onclick="filterList('characters', 'class', 'Bourgeoisie', characterKeys)">Bourgeoisie</button> 
                        <button onclick="filterList('characters', 'class', 'Fighter', characterKeys)">Fighter</button> 
                        <button onclick="filterList('characters', 'class', 'Monk', characterKeys)">Monk</button> 
                        <button onclick="filterList('characters', 'class', 'Wizard', characterKeys)">Wizard</button>
                    </div>
                </td>
            </tr>
            <tr id="tableHeaders">
                <th class="headerSortUp" onclick="loadTable('Characters', characterKeys, this, 'name')" data-ascending>Name</th>
                <th onclick="loadTable('Characters', characterKeys, this, 'race')" data-ascending>Race</th>
                <th onclick="loadTable('Characters', characterKeys, this, 'class')" data-ascending>Class</th>
                <th onclick="loadTable('Characters', characterKeys, this, 'level')" data-ascending>Level</th>
                <th onclick="loadTable('Characters', characterKeys, this, 'partyID')" data-ascending>Party</th>
            </tr>
            <tbody id="listTable"></tbody>
        </table>
    </div>
    <div class="viewcontainer" id="display">
        <form id="display-form">
            <p class='hidden' id="characterID-display"></p>
            <input class='hidden' type="number" id="characterID"/>
            <table>
                <tr id="row-name">
                    <th>Name</th>
                    <td class='display' colspan='5' id="name-display"></td>
                    <td class='input hidden' colspan='5'><input type="text" id="name"/></td>
                </tr>
                <tr id="row-race">
                    <th>Race</th>
                    <td class='display' colspan='5' id="race-display"></td>
                    <td class='input hidden' colspan='5'><input type="text" id="race"/></td>
                </tr>
                <tr id="row-class">
                    <th>Class</th>
                    <td class='display' colspan='3' id="class-display"></td>
                    <td class='input hidden' colspan='3'><input type="text" id="class"/></td>
                    <th>Level</th>
                    <td class='display' id="level-display"></td>
                    <td class='input hidden'><input type="number" id="level"/></td>
                </tr>
                <tr id="row-statheaders">
                    <th>STR</th>
                    <th>DEX</th>
                    <th>CON</th>
                    <th>INT</th>
                    <th>WIS</th>
                    <th>CHA</th>
                </tr>
                <tr id="row-stats">
                    <td class='display center' id="strength-display"></td>
                    <td class='input center hidden'><input type="number" id="strength"/></td>
                    <td class='display center' id="dexterity-display"></td>
                    <td class='input center hidden'><input type="number" id="dexterity"/></td>
                    <td class='display center' id="constitution-display"></td>
                    <td class='input center hidden' id="name-display"><input type="number" id="constitution"/></td>
                    <td class='display center' id="intelligence-display"></td>
                    <td class='input center hidden' id="name-display"><input type="number" id="intelligence"/></td>
                    <td class='display center' id="wisdom-display"></td>
                    <td class='input center hidden'><input type="number" id="wisdom"/></td>
                    <td class='display center' id="charisma-display"></td>
                    <td class='input center hidden'><input type="number" id="charisma"/></td>
                </tr>
                <tr id="row-party">
                    <th colspan='2'>Party</th>
                    <td class='display' colspan='4' id="partyID-display">None</td>
                    <td class='input hidden' colspan='4'><select id="partyID"/></td>
                </tr>
                <tbody id="encounters"></tbody>
                <tr>
                    <td class="center" colspan=2>
                        <input class='display'  type="button" onclick="swapForm('add')" value="Add New">
                        <input id="addElement" class='hidden'  type="button" onclick="addElement('Characters', 'characterID')" value="Confirm">
                        <input id="modifyElement" class='hidden'  type="button" onclick="modifyElement('Characters', 'characterID')" value="Confirm">
                    </td>
                    <td class="center" colspan=2>
                        <input class='display' type="button" onclick="swapForm('modify')" value="Modify">
                        <input class='input hidden'  type="button" onclick="swapForm('cancel'); loadCharacter(document.getElementById('characterID').value)" value="Cancel">
                    </td>
                    <td class="center" colspan=2>
                        <input type="button" onclick="deleteElement('characters', 'characterID')" value="Delete">
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>