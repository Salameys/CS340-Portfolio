    <div class="listcontainer">
        <div class="filtersearch">

        </div>
        <div class="sourcebuttons">

        </div>
        {{> characterTable this}}
    </div>
    <div class="viewcontainer" >
        {{> characterDisplay characters.[0]}}
    </div>
</div>